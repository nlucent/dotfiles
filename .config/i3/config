# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

################ MEDIA SETTINGS ################
# Increase volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
# Decrease volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
# Mute volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-volume 1 toggle

# MEDIA KEYS
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previousq

# Edit i3 Config
bindsym $mod+Shift+grave exec --no-startup-id "/usr/bin/code ~/.config/i3/config"

# File manager
bindsym $mod+Shift+p exec --no-startup-id polo

# Resize Window
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        # font pango:monospace 10,  FontAwesome 10
        font pango:System San Francisco Display 12,  FontAwesome 10
        # status_command i3status
        status_command /usr/bin/bumblebee-status -t gruvbox -m cpu  load  pacman  traffic weather amixer datetime -p datetime.format="%H:%M %a %x" weather.location=80919 weather.unit=imperial
}

# System commands
set $Locker i3lock -i $(cat ~/.config/variety/wallpaper/wallpaper.jpg.txt) -t && sleep 1
set $mode_system System (l) lock, (e) logout, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

################# VIDEO SITES ####################
set $mode_video Video (P) Plex, (A) Amazon Prime, (N) Netflix
mode "$mode_video" {
        bindsym p exec --no-startup-id "google-chrome-stable --app=$PLEX", mode "default"
        bindsym a exec --no-startup-id "google-chrome-stable --app=$PRIME", mode "default"
        bindsym n exec --no-startup-id "google-chrome-stable --app=$NETFLIX", mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
        bindsym $mod+w mode "default"

}
bindsym $mod+w mode "$mode_video"
